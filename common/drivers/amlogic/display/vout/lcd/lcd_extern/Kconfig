menuconfig AML_LCD_EXTERN
	boolean "LCD external driver support"
	default y
	help
		"Amlogic LCD external driver support, such as i2c initial..."

config AML_LCD_EXTERN_I2C_ANX6345
	boolean "LCD external i2c_anx6345 driver"
	default n
	depends on AML_LCD_EXTERN
	help
		"Amlogic LCD external i2c_anx6345 init driver"

config AML_LCD_EXTERN_I2C_TC101
	boolean "LCD external i2c_tc101 driver"
	default n
	depends on AML_LCD_EXTERN
	help
		"Amlogic LCD external i2c_tc101 init driver"

